<%= simple_form_for(@song, html: {:class => 'form-horizontal'} ) do |f| %>
  <%= f.input :tune, label: false, input_html: {:class => 'form-control', placeholder: "song name"} %>
  <%= f.input :singer, label: false, input_html: {:class => 'form-control', placeholder: "singer's name"} %>
  <%= f.input :company, label: false, input_html: {:class => 'form-control', placeholder: "record label"} %>
  <%= f.submit "submit".html_safe, :class => 'btn btn-edit' %> 
<% end %>