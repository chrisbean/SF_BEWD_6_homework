<%= simple_form_for(@song, html: {:class => 'form-horizontal'}) do |f| %>
	<%= f.input :tune, label: false, input_html: {:class => 'form-control', placeholder: "name of song"} %>
	<%= f.input :singer, label: false, input_html: {:class => 'form-control', placeholder: "singer"} %>
	<%= f.input :company, label: false, input_html: {:class => 'form-control', placeholder: "record label"} %>
	<%= f.submit "submit".html_safe, :class => 'btn btn-lg' %>
<% end %>