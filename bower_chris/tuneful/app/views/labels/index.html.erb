<div class="col-xs-10 col-xs-offset-1">
	<div class="row">

		<h1><%= link_to 'Tuneful labels', root_path, :class => 'hed' %></h1>
		<div class="table-responsive">
  	<table class="table table-condensed">
  	<% @labels.each do |label| %>
  		<tr>
    		<td>
				<%= label.try(:name) %> 
				</td>
				<td><%= link_to 'show', label_path(label), :class => 'btn btn-show btn-sm' %>
						<%= link_to 'edit', label_path(label), :class => 'btn btn-edit btn-sm' %>
						<%= link_to 'destroy', label_path(label), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-destroy btn-sm' %>
			<% end %>
			</tr>
		</table>
		</div>
	</div>
	<%= link_to 'add new label', new_label_path, :class => 'btn btn-info btn-sm' %> <%= link_to 'add artist to existing label', new_artist_path, :class => 'btn btn-info btn-sm' %> <%= link_to 'view singers', artists_path, :class => 'btn btn-primary btn-sm' %> <%= link_to 'view songs', songs_path, :class => 'btn btn-primary btn-sm' %>

</div>