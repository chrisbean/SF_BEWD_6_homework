<%= simple_form_for(@drink, html: {:class => 'form-horizontal'}) do |f| %>
	<%= f.input :name, label: false, input_html: {:class => 'form-control lato_font', placeholder: "cocktail name"} %>
	<%= f.input :list, label: false, input_html: {:class => 'form-control lato_font', placeholder: "ingredients"} %>
	<%= f.association :bar, label: false, input_html: {:class => 'form-control lato_font', placeholder: "where to drink it"} %>
	<%= f.input :price, label: "$", input_html: {:class => 'lato_font', placeholder: "it'll cost you"} %>
	<!-- <button type="button" class="btn pull-left" data-toggle="modal" data-target=".bs-example-modal-lg">?</button> -->
	<%= f.input :glass, label: "glassware", :collection => [['martini','martini'],['coupe','coupe'],['rocks or old-fashioned','rocks'],['collins or highball','highball'],['other','other']], input_html: {:class => 'scoot'} %>
	<%= f.input :profile, label: "flavor profile", :collection => [['summery','summery'],['wintery','wintery'],['citrusy','citrusy'],['sweet','sweet'],['herbal/savory','savory'],['medicinal','medicinal']] %>
	<%= f.input :avatar, label: "upload a picture:", input_html: {:class => 'lato_font'} %>
	<%= f.submit "submit".html_safe, :class => 'btn btn-edit lato_font' %>
<% end %> 

