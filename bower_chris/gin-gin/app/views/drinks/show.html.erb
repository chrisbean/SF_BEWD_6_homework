<!-- div structure follows from application.html.erb -->
	<!-- col-md lets columns stack for better responsive experience -->
  <div class="col-md-6">
    <h2 class="lato_font"><%= @drink.name %></h2>
    <p class="lato_font"><%= @drink.list %></p>
    <%= image_tag @drink.avatar.url %>
  </div>

  <div class="col-md-4">
    <h2 class="lato_font"><%= @drink.bar %></h2>
    <p class="lato_font">$<%= @drink.price %></p>
  </div>
  
</div>

<%= link_to 'edit this cocktail', edit_drink_path, :class => 'btn btn-info btn-sm' %>
<%= link_to 'delete this cocktail', drink_path, method: :delete, data: { confirm: 'Are you sure?'} , :class => 'btn btn-danger btn-sm' %>